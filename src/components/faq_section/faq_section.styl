@import '../../constants'

.FAQSection
  background linear-gradient(colorBlue, colorBlueDark)
  color white
  position relative

  .section.title
    padding-top 25px

  .stones
    bottom -7px
    width 102%
    left -5px
    display block
    position inherit

    @media mediaPhone
      bottom 0

  .row
    padding websitePadding / 3 websitePadding

    @media mediaPhone
      padding websitePadding

    .wd-6
      display inline-block
      width 60%
      vertical-align top
      padding 0 websitePadding

      @media mediaPhone
        display block
        width 100%
        padding 0

      .qa
        margin-top 20px

        .question
          margin-bottom 5px

    .wd-4
      display inline-block
      width 40%
      vertical-align top
      padding 0 websitePadding

      @media mediaPhone
        display block
        width 100%
        padding 0

      .qa
        margin-top 20px

        .question
          margin-bottom 5px

    a
      transition border-bottom transitionSpeed
      border-bottom 1px dotted rgba(white, 0.3)

      &:hover
        border-bottom 1px dotted rgba(white, 0.7)
